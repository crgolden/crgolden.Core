<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>crgolden.Core</RootNamespace>
    <LangVersion>latest</LangVersion>
    <PackageId>crgolden.Core.Services</PackageId>
    <Version>1.0.1</Version>
    <Company>crgolden</Company>
    <Authors>Chris Golden</Authors>
    <RepositoryUrl>https://github.com/crgolden/crgolden.Core</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <PackageIconUrl>https://crgolden-ui.azurewebsites.net/favicon.ico</PackageIconUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.KeyVault.Core" Version="3.0.4" />
    <PackageReference Include="Microsoft.Azure.Storage.Blob" Version="11.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="2.2.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-19367-01" PrivateAssets="All" />
    <PackageReference Include="Sendgrid" Version="9.12.0" />
    <PackageReference Include="smartystreets-dotnet-sdk" Version="8.2.0" />
    <PackageReference Include="Stripe.net" Version="28.6.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\crgolden.Shared\Interfaces\Shared.Interfaces.csproj" />
    <ProjectReference Include="..\..\crgolden.Shared\Options\Shared.Options.csproj" />
    <ProjectReference Include="..\Claims\Core.Claims.csproj" />
  </ItemGroup>

</Project>
